<main>

  <section id="details-page">

    <div class="main_card">
      <div class="card_left">
        <div class="card_datails">

          <h1>Name: {{post.name}}</h1>
          <h3>Created by an author: {{owner}}</h3>
          <div class="card_character">
            <p class="card-species">Species: {{post.species}}</p>
            <p class="card-skin">Skin colour: {{post.skinColor}}</p>
            <p class="card-eye">Eye Colour: {{post.eyeColor}}</p>
          </div>

          <p class="disc">Description: {{post.description}}</p>

          {{#if isAuthenticated}}
            <div class="social-btn">
              <!-- Only for registered user and author of the post -->
              {{#if isOwner}}
                <a href="/posts/edit/{{post._id}}" class="edit-btn">Edit</a>
                <a href="/posts/delete/{{post._id}}" class="del-btn">Delete</a>
              {{else}}
                {{#if voted}}
                  <!-- logged in user who has already voted-->
                  <p class="thanks-for-vote">Thanks For Voting</p>
                {{else}}
                  <!-- logged in users, who have not yet voted-->
                  <a href="/posts/vote/{{post._id}}" class="vote-up">Vote</a>
                {{/if}}
              {{/if}}

            </div>
          {{/if}}
        </div>
      </div>
      <div class="card_right">
        <img src="{{post.image}}" alt="image" />
      </div>
    </div>

  </section>

  <section id="votes">
    <div class="vote-info">
      <div class="card_left">
        <div class="card_datails">
          <h1>Votes</h1>
          <div class="card_vote">
            <p class="PV">Total rating of votes: {{post.votes.length}}</p>
          </div>
          {{#if post.votes.length}}
            <p class="disc">People who voted for the post - {{votes}}.</p>
          {{else}}
            <p class="disc">People who voted for the post - No one has voted
              yet.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </section>

</main>