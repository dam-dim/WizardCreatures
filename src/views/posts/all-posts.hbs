<main>

  <section id="catalog">
    <h1>All posts</h1>
    <div class="band">

      {{#if allPosts}}
        {{#each allPosts}}
          {{>post}}
        {{/each}}
      {{else}}
        <div class="no-posts">
          <p class="no-offer">There are no posts yet...</p>
        </div>
      {{/if}}

    </div>
  </section>
</main>